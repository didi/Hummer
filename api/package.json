{
  "name": "root",
  "version": "0.0.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "prewatch": "npm run bootstrap",
    "dev": "NODE_ENV=development node ./scripts/dev",
    "build": "NODE_ENV=production node ./scripts/build",
    "test": "node scripts/build.js && jest --runInBand",
    "pub": "npm run build && npm run clean:lock && npx lerna publish --conventional-commits  && git push --tags",
    "clean": "lerna clean --yes && rm -rf ./packages/**/package-lock.json",
    "clean:lock": "rm -rf ./package-lock.json && rm -rf ./packages/**/package-lock.json"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-strip": "^2.0.0",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.11.3",
    "@types/puppeteer": "^2.0.0",
    "@typescript-eslint/parser": "^3.2.0",
    "chalk": "4",
    "execa": "^4.0.3",
    "inquirer": "^9.1.4",
    "jest": "^26.0.1",
    "lerna": "^6.0.1",
    "rollup": "^2.48.0",
    "rollup-plugin-external-globals": "^0.6.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^26.1.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@hummer/tenon-dev-tool": "^0.2.2"
  }
}
